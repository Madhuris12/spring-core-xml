<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Shiva"></constructor-arg>
        <constructor-arg index="1" value="34"></constructor-arg>
        <constructor-arg index="2" value="Male"></constructor-arg>
    </bean>

    <bean id="movie1" class="com.stackroute.domain.Movie">
        <constructor-arg index="0" value="Bahubali"></constructor-arg>
        <constructor-arg index="1" value="S S Rajamouli"></constructor-arg>
        <constructor-arg index="2" ref="actor1"></constructor-arg>
    </bean>


</beans>